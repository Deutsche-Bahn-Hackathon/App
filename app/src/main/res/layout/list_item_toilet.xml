<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="128dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_toilet_wagon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Wagon 23"
            android:textColor="@color/text_primary"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/list_item_toilet_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Toilet unoccupied"
            android:textColor="@color/material_green_500"
            android:textSize="14sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_toilet_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginRight="16dp"
        android:gravity="end"
        android:lines="2"
        android:text="2 wagons in\ndriving direction"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"/>

</FrameLayout>